<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- STATISTICS ACTIVITY -->
     <style name="statistics_value" parent="AppBaseTheme">
       <item name="android:textColor">@color/violet_blue</item>
    </style>
    
     <style name="statistics_container_title" parent="AppBaseTheme">

         <item name="android:layout_marginTop">3dp</item>
         <item name="android:layout_gravity">center</item>
       <item name="android:textColor">@color/container_title</item>
    </style>
    
    <style name="statistics_container" parent="AppBaseTheme">
          <item name="android:padding">6dp</item>
      <item name="android:background">@color/gray</item><!--  -->
    </style>
    
      <style name="statistics_caption" parent="AppBaseTheme">
      <item name="android:textSize">18dp</item> <!--  -->
        </style>

    <!--SIMILARITIY ACTIVITY-->

    <style name="similarity_outer_container" parent="AppBaseTheme">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">30px</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="similarity_name" parent="AppBaseTheme">
        <item name="android:textColor">#FFFFFF</item> <!--  -->
    </style>
    <!--player image-->
    <style name="similarity_img">
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:layout_width">300px</item>
        <item name="android:layout_height">300px</item>
    </style>
    <style name="similarity_speed_caption">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="similarity_text_containter" parent="AppBaseTheme">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">100px</item>
        <item name="android:paddingLeft">70px</item>
    </style>
    <style name="similarity_highlight" parent="AppBaseTheme">
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
</resources>
